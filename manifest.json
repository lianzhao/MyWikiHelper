{
  "manifest_version": 2,

  "name": "Wiki Porter",
  "description": "Port wiki text to http://xxx.huiji.wiki",
  "version": "0.0.1",
  "author": "lianzhao",
  "homepage_url": "https://github.com/lianzhao/MyWikiHelper",

  "background": { "scripts": ["lib/jquery-2.1.3.min.js", "background.js"] },
  
  "icons": { "16": "resources/icon.ico",
           "48": "resources/icon.ico",
          "128": "resources/icon.ico" },
  
  "permissions": [
    "tabs",
    "activeTab",
    "http://*.huiji.wiki/"
  ],

  "browser_action": {
    "default_title": "My wiki helper",
    "default_icon": "resources/icon.ico"
  }
}