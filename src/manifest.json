{
  "manifest_version": 2,

  "name": "Wiki Porter",
  "description": "Port wiki text to http://xxx.huiji.wiki 注意：使用本软件搬运维基页面属于个人行为，本软件不为因此产生的版权纠纷背书。",
  "version": "0.1.2",
  "author": "lianzhao",
  "homepage_url": "https://github.com/lianzhao/MyWikiHelper",
  
  "icons": { "16": "resources/icon.ico",
           "48": "resources/icon.ico",
          "128": "resources/icon.ico" },
  
  "permissions": [
    "tabs",
    "activeTab",
    "http://*.wikipedia.com/",
    "https://*.wikipedia.com/",
    "http://*.huiji.wiki/",
    "http://*.wikia.com/",
    "https://commons.wikimedia.org/",
    "http://www.tolkiengateway.net/",
    "http://saki.cc/"
  ],

  "browser_action": {
    "default_title": "My wiki helper",
    "default_icon": "resources/icon.ico",
    "default_popup": "popup.html"
  }
}